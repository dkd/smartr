<div class="question-list">
  <div class="stats">
    <div class="votes">
      <%=question.votes_count == 0? 0 : question.votes_count %>
      <span class="desc"><%= t("votes", :count => question.votes_count) %></span>
    </div>

    <div class="views">
      <%=question.views.humanize %>
      <span class="desc"><%= t("views", :count => question.views) %></span>
    </div>

    <div class="answers <%=" zero" if question.answers.size == 0 %><%=" answered" unless question.accepted_answer.blank? %>">
      <%= question.answers.size %>
      <span class="desc"><%= t("answers", :count => question.answers.size) %></span>
    </div>
  </div>
  <div class="body">
    <h3><%= link_to(h(question.name), question_path(question.id, question.friendly_id))%></h3>
    <% unless controller.controller_name == "users" %>
    <span class="user">
      <%= link_to image_tag(question.user.avatar.url(:tiny)), user_path(question.user) %>
      <%= link_to question.user.login, user_path(question.user) %> &middot; <%=question.user.reputation%>
      &middot; <%= distance_of_time_in_words_to_now question.created_at %>
    </span>
    <% end -%>
    <% if question.tags.present? %>
      <div class="tags">
        <% question.tags.each do |tag| -%>
          <%= link_to(h(tag), questions_path(:tag => tag), :class => "tag")%>
        <% end -%>
    </div>
    <% end -%>
  </div>
  <br class="clear" />
</div>
