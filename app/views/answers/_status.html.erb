<% if user_signed_in? && answer.question.user == current_user %>
    <% if answer == answer.question.accepted_answer %>
      <%= link_to(raw("&nbsp;"), 
                  update_for_toggle_acceptance_question_path(answer.question, 
                                                             :answer_id => answer.id, 
                                                             :mode => :toggle_acceptance), 
                  :method => :put,
                  :remote => true,
                  :class => "accepted") %>
    <% else %>
       <%= link_to(raw("&nbsp;"), 
                   update_for_toggle_acceptance_question_path(answer.question, 
                                                              :answer_id => answer.id, 
                                                              :mode => :toggle_acceptance), 
                   :method => :put,
                   :remote => true,
                   :class => "") %>
    <% end -%>
  
  <% else %>
    <%= image_tag("checked.png") if answer.question.accepted_answer == answer %>
  <% end -%>
 