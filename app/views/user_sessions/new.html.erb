<h2>Login</h2>
<% form_for @user_session, :url => user_session_path do |f| %>
  <%= f.error_messages %>
  <%= f.label :login %><br />
  <%= f.text_field :login %><br />
  <br />
  <%= f.label :password %><br />
  <%= f.password_field :password %><br />
  <!--><br />
  <%= f.label :openid_identifier	 %><br />
  <%= f.text_field :openid_identifier, :value => "https://www.google.com/accounts/o8/id" %><br />-->
  <br />
  <%= f.check_box :remember_me %><%= f.label :remember_me %><br />
  <br />
  
  <%= f.submit "Login" %>
<% end %>
<% main_menu :users %>



