<% content_for :title do %>
  <%= image_tag(@user.avatar.url(:medium), :alt => @user.login, :title => @user.login, :class => "thumbnail pull-left", :style => "margin-right: 6px") + @user.login %>
<% end %>
<% content_for :subtitle do %>
  <%= "<br>#{@user.questions.count} #{t("question", :count => @user.questions.count).capitalize}, #{@user.answers.count} #{t("answer", :count => @user.answers.count).capitalize}, #{@user.comments.count} #{t("comment", :count => @user.comments.count).capitalize}#{}".html_safe %>
<% end %>
<%#   %>
<% content_for :subtitle do %>
  <%= (user_signed_in? && current_user == @user) ? raw("<br>"+link_to("Edit my Account", edit_user_registration_path, :class => "btn btn-success btn-large")) : ""%>
  <br style='clear:both'>
<% end %>