<% title @user.login %>
<div class="header-with-tabs">
    <div class="tabs">
      <%= user_show_submenu(:detail) %>
    </div>
    <br class="clear" />
</div>

<div class="user-header">
  <%= image_tag @user.avatar.url(:medium), :alt => @user.login, :title => @user.login %>
  <p>
    <span><%= @user.questions.count %></span> <%= t("question", :count => @user.questions.count).capitalize %>,
    <span><%= @user.answers.count %></span> <%= t("answer", :count => @user.answers.count).capitalize %> &amp;
    <span><%= @user.comments.count %></span> <%= t("comment", :count => @user.comments.count).capitalize %>.
  </p>
</div>

<br class="clear" />
<% if @user.latest_questions.size > 0 %>
  <div class="user-questions">
    <h2><%= t("questions.latest_questions") %></h2>
    <% @user.latest_questions.each do |question| %>
      <%= render "question", :question => question %>
    <% end -%>
  </div>
  <br class="clear" />
<% end -%>
<% if @user.latest_answers.size > 0 %>
  <div class="user-questions">
    <h2><%= t("answers.latest_answers") %></h2>
    <% @user.latest_answers.each do |question| %>
      <%= render "question", :question => question %>
    <% end -%>
  </div>
<% end -%>

<% main_menu :users %>
<% content_for :sidebar, render("/users/sidebar/user", :user => @user) %>