$('#vote-box-<%=@vote.voteable.id %>').html('<%= escape_javascript(render(:partial => "/#{@vote.voteable_type.downcase.pluralize}/vote_box", :locals => {@vote.voteable_type.downcase.to_sym => @vote.voteable})) %>');
$('#<%=@vote.voteable.class.name.downcase%>-votes-count-<%=@vote.voteable.id%>').html('<%=@vote.voteable.votes_count%>');
$('.user-<%=@vote.voteable.user.id %>-reputation').html('<%=@vote.voteable.user.reputation%>');
$('.user-<%=@current_user.id %>-reputation').html('<%=@vote.user.reputation%>');
<% if @vote.voteable.is_a?(Comment)%>
  $('#comment-votes-<%=@vote.voteable.id%>').html('<%=t("votes", :count => @vote.voteable.votes_count)%>');
<% end-%>